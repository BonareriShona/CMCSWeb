@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <style>
        body {
            font-family: Arial;
            padding: 50px;
            background: #f5f5f5;
        }

        .login-box {
            max-width: 400px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        input, button {
            width: 100%;
            padding: 15px;
            margin: 10px 0;
            font-size: 16px;
        }

        button {
            background: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background: #0056b3;
            }

        .error {
            color: red;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Login to CMCS</h2>

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }

        <!-- FIXED: Use username instead of email to match your AppLiquidationUser model -->
        <form method="post" action="/Account/Login">
            @Html.AntiForgeryToken()
            <div>
                <input type="text" name="Email" placeholder="Username" value="HR1" required>
            </div>
            <div>
                <input type="password" name="password" placeholder="Password" value="pass" required>
            </div>
            <div>
                <button type="submit">SIGN IN</button>
            </div>
        </form>

        <div style="margin-top: 20px; font-size: 14px; color: #666;">
            <strong>Test Accounts:</strong><br>
            HR: HR1 / pass<br>
            Lecturer: hazelshaka / pass<br>
            Coordinator: COORD1 / pass
        </div>
    </div>
</body>
</html>