@model IEnumerable<Claim>
@{
    ViewData["Title"] = "Monthly Report";
    var totalAmount = Model?.Sum(c => c.TotalAmount) ?? 0;
    var month = ViewBag.Month as int? ?? DateTime.Now.Month;
    var year = ViewBag.Year as int? ?? DateTime.Now.Year;
    var claims = Model?.ToList() ?? new List<Claim>();
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-file-earmark-pdf"></i> Monthly Claims Report
            </h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Contract Monthly Claim System</h5>
                    <p class="mb-0">Report Period: @month/@year</p>
                    <p class="mb-0">Generated on: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                </div>
                <div class="col-md-6 text-end">
                    <h5 class="text-success">Total Amount: @totalAmount.ToString("C")</h5>
                    <p class="mb-0">Total Claims: @claims.Count</p>
                </div>
            </div>

            @if (!claims.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No approved claims found for the selected period.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer Name</th>
                                <th>Department</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Total Amount</th>
                                <th>Documentation</th>
                                <th>Approved Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in claims.OrderBy(c => c.User?.FullName ?? ""))
                            {
                                <tr>
                                    <td>#@claim.Id</td>
                                    <td>@(claim.User?.FullName ?? "Unknown User")</td>
                                    <td>@(claim.User?.Department ?? "No Department")</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td class="fw-bold">@claim.TotalAmount.ToString("C")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.Documentation))
                                        {
                                            <span title="@claim.Documentation">
                                                @(claim.Documentation.Length > 30 ? claim.Documentation.Substring(0, 30) + "..." : claim.Documentation)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No documentation</span>
                                        }
                                    </td>
                                    <td>@(claim.ApprovedAt?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-secondary fw-bold">
                            <tr>
                                <td colspan="5" class="text-end">GRAND TOTAL:</td>
                                <td>@totalAmount.ToString("C")</td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="row mt-4">
                    <div class="col-md-12 text-center">
                        <button onclick="window.print()" class="btn btn-success me-2">
                            <i class="bi bi-printer"></i> Print Report
                        </button>
                        <a asp-action="Reports" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Reports
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    @@media print {
        .card-header {
            background-color: #198754 !important;
            color: white !important;
        }

        .btn {
            display: none !important;
        }

        .card {
            border: none !important;
            box-shadow: none !important;
        }

        .table {
            font-size: 12px;
        }
    }
</style>