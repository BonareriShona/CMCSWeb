@model IEnumerable<Claim>
@{
    ViewData["Title"] = "Reports & Invoices";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6"><i class="bi bi-graph-up text-success"></i> Reports & Invoices</h1>
    </div>

    <!-- Report Generation Form -->
    <div class="card shadow mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0"><i class="bi bi-file-earmark-pdf"></i> Generate Monthly Report</h5>
        </div>
        <div class="card-body">
            <form asp-action="GenerateMonthlyReport" method="post" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Month</label>
                    <select name="month" class="form-select" required>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" selected="@(i == DateTime.Now.Month)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Year</label>
                    <select name="year" class="form-select" required>
                        @for (int i = DateTime.Now.Year - 2; i <= DateTime.Now.Year + 1; i++)
                        {
                            <option value="@i" selected="@(i == DateTime.Now.Year)">@i</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-file-earmark-pdf"></i> Generate Report
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Approved Claims List -->
    <div class="card shadow">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0"><i class="bi bi-check-circle text-success"></i> Approved Claims</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No approved claims found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Month/Year</th>
                                <th>Approved Date</th>
                                <th>Documentation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>#@claim.Id</td>
                                    <td>@claim.User?.FullName</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td class="fw-bold text-success">@claim.TotalAmount.ToString("C")</td>
                                    <td>@claim.ClaimMonth/@claim.ClaimYear</td>
                                    <td>@claim.ApprovedAt?.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                        {
                                            <a href="~/uploads/@claim.DocumentPath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-download"></i> Document
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No document</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-secondary">
                            <tr>
                                <td colspan="4" class="text-end fw-bold">Total:</td>
                                <td class="fw-bold text-success">@Model.Sum(c => c.TotalAmount).ToString("C")</td>
                                <td colspan="3"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>