@model List<CMCSWeb.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6"><i class="bi bi-list-check text-primary"></i> My Claims</h1>
        <a asp-action="Submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Submit New Claim
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You haven't submitted any claims yet.
            <a asp-action="Submit" class="alert-link">Submit your first claim</a>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0"><i class="bi bi-clock-history"></i> Claim History</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Total Amount</th>
                                <th>Documentation</th>
                                <th>Document</th>
                                <th>Status</th>
                                <th>Submitted</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td class="fw-bold">#@claim.Id</td>
                                    <td>@claim.HoursWorked hours</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td class="fw-bold text-success">@claim.TotalAmount.ToString("C")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.Documentation))
                                        {
                                            <span title="@claim.Documentation">
                                                @(claim.Documentation.Length > 50 ? claim.Documentation.Substring(0, 50) + "..." : claim.Documentation)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No documentation</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                        {
                                            <a href="~/uploads/@claim.DocumentPath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-download"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (claim.Status)
                                        {
                                            case CMCSWeb.Models.ClaimStatus.Pending:
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-clock"></i> Pending
                                                </span>
                                                break;
                                            case CMCSWeb.Models.ClaimStatus.Verified:
                                                <span class="badge bg-info">
                                                    <i class="bi bi-check-circle"></i> Verified
                                                </span>
                                                break;
                                            case CMCSWeb.Models.ClaimStatus.Approved:
                                                <span class="badge bg-success">
                                                    <i class="bi bi-award"></i> Approved
                                                </span>
                                                break;
                                            case CMCSWeb.Models.ClaimStatus.Rejected:
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Rejected
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>@claim.SubmittedAt.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count</h5>
                        <p class="card-text">Total Claims</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count(c => c.Status == CMCSWeb.Models.ClaimStatus.Approved)</h5>
                        <p class="card-text">Approved</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count(c => c.Status == CMCSWeb.Models.ClaimStatus.Pending)</h5>
                        <p class="card-text">Pending</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count(c => c.Status == CMCSWeb.Models.ClaimStatus.Verified)</h5>
                        <p class="card-text">Verified</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Legend -->
        <div class="card mt-4">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0"><i class="bi bi-info-circle"></i> Status Legend</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <span class="badge bg-warning"><i class="bi bi-clock"></i> Pending</span>
                        <small class="d-block text-muted">Awaiting coordinator review</small>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-info"><i class="bi bi-check-circle"></i> Verified</span>
                        <small class="d-block text-muted">Approved by coordinator</small>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-success"><i class="bi bi-award"></i> Approved</span>
                        <small class="d-block text-muted">Final approval by manager</small>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Rejected</span>
                        <small class="d-block text-muted">Claim was rejected</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>