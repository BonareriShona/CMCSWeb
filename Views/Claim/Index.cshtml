@model List<CMCSWeb.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6"><i class="bi bi-list-check text-primary"></i> My Claims</h1>
        <a asp-action="Submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Submit New Claim
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You haven't submitted any claims yet.
            <a asp-action="Submit" class="alert-link">Submit your first claim</a>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0"><i class="bi bi-clock-history"></i> Claim History</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Total Amount</th>
                                <th>Documentation</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>#@claim.Id</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td class="fw-bold">@claim.TotalAmount.ToString("C")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.Documentation))
                                        {
                                            <span>@claim.Documentation</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No notes</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (claim.Status)
                                        {
                                            case CMCSWeb.Models.ClaimStatus.Pending:
                                                <span class="badge bg-warning"><i class="bi bi-clock"></i> Pending</span>
                                                break;
                                            case CMCSWeb.Models.ClaimStatus.Verified:
                                                <span class="badge bg-info"><i class="bi bi-check-circle"></i> Verified</span>
                                                break;
                                            case CMCSWeb.Models.ClaimStatus.Approved:
                                                <span class="badge bg-success"><i class="bi bi-award"></i> Approved</span>
                                                break;
                                            case CMCSWeb.Models.ClaimStatus.Rejected:
                                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Rejected</span>
                                                break;
                                        }
                                    </td>
                                    <td>@claim.SubmittedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                        {
                                            <a href="~/uploads/@claim.DocumentPath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-download"></i> Document
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No file</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Status Legend -->
        <div class="mt-4">
            <h6>Status Legend:</h6>
            <div class="d-flex flex-wrap gap-3">
                <span class="badge bg-warning"><i class="bi bi-clock"></i> Pending - Awaiting coordinator review</span>
                <span class="badge bg-info"><i class="bi bi-check-circle"></i> Verified - Approved by coordinator</span>
                <span class="badge bg-success"><i class="bi bi-award"></i> Approved - Final approval by manager</span>
                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Rejected - Claim was rejected</span>
            </div>
        </div>
    }
</div>